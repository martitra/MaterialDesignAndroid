<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="materialtest.vivz.slidenerd.materialtest.fragments.NavigationDrawerFragment">

        <LinearLayout
            android:id="@+id/containerDrawerImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FB8C00">

            <ImageView
                android:id="@+id/image"
                android:layout_width="280dp"
                android:layout_height="140dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="@dimen/drawer_margin_top"
                android:src="@drawable/ic_abstract" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/drawerList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="205dp">
        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</FrameLayout>

